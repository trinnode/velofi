{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "outputDirectory": ".next",
    "framework": "nextjs",
    "installCommand": "npm install",
    "buildCommand": "npm run build",
    "devCommand": "npm run dev",
    "functions": {
        "pages/api/**/*.ts": {
            "runtime": "nodejs20.x"
        },
        "pages/api/**/*.js": {
            "runtime": "nodejs20.x"
        }
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                }
            ]
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}