{
  "name": "velofi-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "VeloFi DeFi Platform - Complete Monorepo with Frontend, Backend, and Smart Contracts",
  "workspaces": [
    "frontend",
    "backend", 
    "contracts"
  ],
  "scripts": {
    "install:all": "npm install",
    "install:latest": "npm update --workspaces",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend", 
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:all": "npm run build --workspaces --if-present",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build:contracts": "npm run compile --workspace=contracts",
    "test:all": "npm run test --workspaces --if-present",
    "test:frontend": "npm run test --workspace=frontend",
    "test:backend": "npm run test --workspace=backend", 
    "test:contracts": "npm run test --workspace=contracts",
    "lint:all": "npm run lint --workspaces --if-present",
    "lint:fix:all": "npm run lint:fix --workspaces --if-present",
    "clean:all": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "clean:deps": "rm -rf node_modules frontend/node_modules backend/node_modules contracts/node_modules && rm -rf package-lock.json frontend/package-lock.json backend/package-lock.json contracts/package-lock.json",
    "start:backend": "npm run start --workspace=backend",
    "start:frontend": "npm run start --workspace=frontend",
    "deploy:contracts": "npm run deploy --workspace=contracts",
    "verify:contracts": "npm run verify --workspace=contracts",
    "setup": "npm install && npm run build:contracts"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/velofi/velofi-platform.git"
  },
  "keywords": [
    "defi",
    "blockchain", 
    "ethereum",
    "somnia",
    "dapp",
    "monorepo",
    "savings",
    "lending",
    "dex",
    "governance"
  ],
  "author": "VeloFi Team",
  "license": "MIT"
}