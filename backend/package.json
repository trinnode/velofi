{
  "name": "velofi-backend",
  "version": "1.0.0",
  "description": "VeloFi DeFi Platform - Backend Node.js API Server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.js\"",
    "format:check": "prettier --check \"**/*.js\"",
    "migrate": "node src/utils/migrate.js",
    "seed": "node src/utils/seed.js",
    "build": "echo 'No build step required for Node.js'",
    "docker:build": "docker build -t velofi-backend .",
    "docker:run": "docker run -p 3001:3001 velofi-backend"
  },
  "keywords": [
    "defi",
    "blockchain",
    "ethereum",
    "api",
    "nodejs",
    "express",
    "siwe",
    "somnia",
    "web3"
  ],
  "author": "VeloFi Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.4.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-session": "^1.18.0",
    "connect-redis": "^7.1.1",
    "redis": "^4.7.0",
    "dotenv": "^16.4.5",
    "pg": "^8.12.0",
    "pg-pool": "^3.7.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "siwe": "^2.3.2",
    "ethers": "^6.14.1",
    "viem": "^2.21.19",
    "joi": "^17.13.3",
    "express-validator": "^7.2.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.15",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0",
    "cron": "^3.1.7",
    "axios": "^1.7.7",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "uuid": "^10.0.0",
    "crypto": "^1.0.1",
    "node-cache": "^5.1.2",
